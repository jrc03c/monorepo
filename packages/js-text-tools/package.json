{
  "name": "@jrc03c/js-text-tools",
  "version": "0.0.34",
  "description": "a few small tools for working with text in js",
  "main": "src/index.js",
  "scripts": {
    "build": "esbuild src/index.js --bundle --outfile=dist/js-text-tools.js --minify",
    "watch": "esbuild src/index.js --bundle --outfile=dist/js-text-tools.js --minify --watch",
    "test": "jest",
    "pub": "npm version patch --force && npm publish --access=public"
  },
  "author": "jrc03c",
  "license": "ISC",
  "bin": {
    "camel": "src/camelify-bin.js",
    "camelify": "src/camelify-bin.js",
    "indent": "src/indent-bin.js",
    "kebab": "src/kebabify-bin.js",
    "kebabify": "src/kebabify-bin.js",
    "pascal": "src/pascalify-bin.js",
    "pascalify": "src/pascalify-bin.js",
    "snake": "src/snakeify-bin.js",
    "snakeify": "src/snakeify-bin.js",
    "unindent": "src/unindent-bin.js",
    "wrap": "src/wrap-bin.js"
  },
  "devDependencies": {
    "@jrc03c/make-key": "^0.0.15",
    "esbuild": "^0.14.43",
    "eslint": "^8.21.0",
    "jest": "^29.0.3"
  },
  "dependencies": {
    "@jrc03c/bash-colors": "^0.0.3",
    "@jrc03c/js-math-tools": "^0.0.63"
  }
}
